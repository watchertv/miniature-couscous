page {
    font-size: 14px;
    color: #474747;
    background-color: #f9f9f9;
}

page, view, button, label, input, textarea{
    box-sizing: border-box;
}

button {
    transition: all 0.2s;
    font-size: 16px;
    border-radius: 2px;
}

button::after {
    border: none;
}

label {
    line-height: 44rpx;
    display: inline-block;
}

input, textarea {
    width: 100%;
    border-bottom: 1px solid #eee;
    line-height: 44rpx;
	height: auto;
    padding: 10rpx 0;
}

textarea {
    height: 200rpx;
}

navigator {
    color: #10aeff;
}

.navigator-hover {
    background-color: transparent;
}

.h1, .h2, .h3, .h4, .h5, .h6 {
    line-height: 1.5;
}

.h1 {
    font-size: 42px;
}

.h2 {
    font-size: 32px;
}

.h3 {
    font-size: 24px;
}

.h4 {
    font-size: 18px;
}

.h5 {
    font-size: 14px;
}

.h6 {
    font-size: 12px;
}

.text-left {
    text-align: left !important;
}

.text-center {
    text-align: center !important;
}

.text-right {
    text-align: right !important;
}

